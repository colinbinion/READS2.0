<section class="books">
   <h2>Books</h2>
   <ul>
       {{#each this}}
           <li>
               <figure>
                   <img src="{{cover_url}}" alt="{{book.title}} book cover"/>
               </figure>
               <div class="details">
                   <h3>{{title}}</h3>
                   <span class="genre">{{genre}}</span>
                   <p>{{this.description}}</p>

               </div>
           </li>
       {{/each}}
   </ul>
   <a class="add" href="books/new">Add a Book</a>
</section>
